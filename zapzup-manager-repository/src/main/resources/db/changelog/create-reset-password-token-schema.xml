<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Victor" id="create_reset-password-token">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="reset-password-token"/>
            </not>
        </preConditions>
        <createTable tableName="reset-password-token" schemaName="zapzup">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="varchar(36)">
                <constraints unique="true"/>
            </column>
            <column name="user_id" type="varchar(40)"/>
            <column name="expiration_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet author="Victor" id="set_reset-password-token_pk">
        <addPrimaryKey schemaName="zapzup" columnNames="id" constraintName="reset-password-token_pkey" tableName="reset-password-token"/>
    </changeSet>

    <changeSet author="Victor" id="set_user_fk_reset_password">
        <addForeignKeyConstraint baseTableName="reset-password-token"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_id"
                                 referencedTableName="user_entity"
                                 referencedColumnNames="id"
                                 baseTableSchemaName="zapzup"
                                 referencedTableSchemaName="zapzup"
        />
    </changeSet>

</databaseChangeLog>
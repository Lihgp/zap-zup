<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Victor" id="create_message_chat">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="message_chat"/>
            </not>
        </preConditions>
        <createTable tableName="message_chat" schemaName="zapzup">
            <column name="message_id" type="varchar(39)">
                <constraints nullable="false"/>
            </column>
            <column name="chat_id" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Victor" id="set_message-chat_fk">
        <addForeignKeyConstraint baseTableName="message_chat"
                                 baseColumnNames="message_id"
                                 constraintName="fk_message_id"
                                 referencedTableName="message_entity"
                                 referencedColumnNames="id"
                                 baseTableSchemaName="zapzup"
                                 referencedTableSchemaName="zapzup"
        />
    </changeSet>
    <changeSet author="Victor" id="set_chat-message_fk">
        <addForeignKeyConstraint baseTableName="message_chat"
                                 baseColumnNames="chat_id"
                                 constraintName="fk_chat_id"
                                 referencedTableName="chat_entity"
                                 referencedColumnNames="id"
                                 baseTableSchemaName="zapzup"
                                 referencedTableSchemaName="zapzup"
        />
    </changeSet>

</databaseChangeLog>
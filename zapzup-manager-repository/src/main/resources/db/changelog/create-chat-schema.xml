<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Victor" id="create_chat_entity">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chat_entity"/>
            </not>
        </preConditions>
        <createTable tableName="chat_entity" schemaName="zapzup">
            <column name="id" type="varchar(41)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="description" type="varchar(255)"/>
            <column name="status" type="varchar(10)"/>
            <column name="file_id" type="varchar(40)"/>
            <column name="created_by" type="varchar(60)"/>
            <column name="updated_by" type="varchar(60)"/>
            <column name="deleted_by" type="varchar(60)"/>
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
            <column name="deleted_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet author="Victor" id="set_chat_entity_pk">
        <addPrimaryKey schemaName="zapzup" columnNames="id" constraintName="chat_entity_pkey" tableName="chat_entity"/>
    </changeSet>

    <changeSet author="Victor" id="set_file_fk">
        <addForeignKeyConstraint baseTableName="chat_entity"
                                 baseColumnNames="file_id"
                                 constraintName="fk_file_id"
                                 referencedTableName="file_entity"
                                 referencedColumnNames="id"
                                 baseTableSchemaName="zapzup"
                                 referencedTableSchemaName="zapzup"
        />
    </changeSet>

</databaseChangeLog>